# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rsvp_db

# Security
SESSION_SECRET=your-super-secure-32-character-minimum-secret-here-change-this-in-production
NODE_ENV=development

# Server Configuration
PORT=5000
HOSTNAME=0.0.0.0

# CORS Configuration (for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Email Configuration (Choose one or multiple)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Resend
RESEND_API_KEY=your-resend-api-key

# Gmail OAuth
GMAIL_CLIENT_ID=your-gmail-oauth-client-id
GMAIL_CLIENT_SECRET=your-gmail-oauth-client-secret
GMAIL_REDIRECT_URI=http://localhost:5000/api/oauth/gmail/callback

# Gmail Direct SMTP (Alternative to OAuth)
GMAIL_ACCOUNT=your-email@gmail.com
GMAIL_PASSWORD=your-app-specific-password

# Outlook OAuth
OUTLOOK_CLIENT_ID=your-outlook-oauth-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-oauth-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:5000/api/oauth/outlook/callback

# WhatsApp Business API
WHATSAPP_PHONE_ID=your-whatsapp-phone-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# AI Services (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Development
DEBUG=false