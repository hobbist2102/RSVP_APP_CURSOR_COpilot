# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rsvp_db

# Server Configuration
NODE_ENV=production
PORT=5000
HOSTNAME=0.0.0.0

# Security
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Choose one or more providers)
# Gmail OAuth
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=https://yourdomain.com/oauth/callback/gmail

# Gmail SMTP (Alternative to OAuth)
GMAIL_SMTP_HOST=smtp.gmail.com
GMAIL_SMTP_PORT=587
GMAIL_SMTP_SECURE=false
GMAIL_ACCOUNT=your-email@gmail.com
GMAIL_PASSWORD=your-app-password

# Outlook OAuth
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=https://yourdomain.com/oauth/callback/outlook

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Resend
RESEND_API_KEY=your-resend-api-key

# Brevo (formerly Sendinblue)
BREVO_API_KEY=your-brevo-api-key

# WhatsApp Business API (Optional)
WHATSAPP_BUSINESS_PHONE_ID=your-phone-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-account-id
WHATSAPP_ACCESS_TOKEN=your-access-token

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (Optional - for session store)
REDIS_URL=redis://localhost:6379

# External Services (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Development Only (Remove in production)
LOG_LEVEL=info
DISABLE_HTTPS_REDIRECT=false